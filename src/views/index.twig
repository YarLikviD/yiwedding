  </audio>
  <section
    data-aos="fade-up"
    style="background: url('/src/assets/img/sky.png') center top/cover"
    class="max-w-lg mx-auto px-4 pb-12 h-[387px] flex flex-col">
    <div class="flex justify-center mt-auto">
      <img src="/src/assets/img/handsnhearts.png" alt="">
    </div>
  </section>
  <section
    data-aos="fade-up"
    data-aos-anchor-placement="center-bottom"
